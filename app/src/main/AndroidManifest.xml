<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pero.fesb.hr.werewolfandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".JoinGameActivity">
        </activity>
        <activity
            android:name=".CreateGameActivity">
        </activity>
        <activity
            android:name=".LobbyActivity">
        </activity>
        <activity
            android:name=".ShowRolesActivity">
        </activity>
        <activity
            android:name=".WerewolfActivity">
        </activity>
        <activity
            android:name=".SleepActivity">
        </activity>
        <activity
            android:name=".DoctorActivity">
        </activity>
        <activity
            android:name=".SeerActivity">
        </activity>
        <activity
            android:name=".DayActivity">
        </activity>
        <activity
            android:name=".WerewolvesVictoryActivity">
        </activity>
        <activity
            android:name=".VillagersVictoryActivity">
        </activity>
        <activity
            android:name=".DeadActivity">
        </activity>
    </application>

</manifest>